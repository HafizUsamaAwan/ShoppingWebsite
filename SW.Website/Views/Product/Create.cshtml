@model SW.DAL.Product
@{
    //Layout = null;
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminProfileLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div> 

        <form action='@Url.Content("~/Product/Save")' method="post" enctype="multipart/form-data">

            @if (Model.PictureName != null)
            {
                <img src='@Url.Content("~/UploadedFiles")/@Model.PictureName' style="width:100px;height:100px;" /><br />
            }

            <input type="hidden" name="ProductID" value="@Model.ProductID" /><br />
            <input type="hidden" name="PictureName" value="@Model.PictureName" />

            Name: <input type="text" name="PName" value="@Model.PName" /><br />
            Price: <input type="text" name="Price" value="@Model.Price" /><br />
            Category: 
            <select name="CategoryID">
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.CategoryID">@item.CategoryName</option>
                }
            </select><br />
            Image: <input type="file" name="Image" /><br />
            <input type="submit" value="Save" />

        </form>
    </div>
</body>
</html>
